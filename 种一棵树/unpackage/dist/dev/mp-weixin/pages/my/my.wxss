.my {
  background: #E8FADE;
  height: 100vh;
}
.my .background {
  background-color: #D0E5CB;
  height: 380rpx;
  position: relative;
}
.my .background .my-avatar {
  position: absolute;
  left: 20rpx;
  bottom: -100rpx;
}
.my .background .my-avatar .my-avatar-img {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
}
.my .login .order {
  padding: 0 28rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  margin-top: 140rpx;
}
.my .login .order .head {
  padding-left: 6px;
  flex: 1;
  background-color: #fff;
  border-bottom: 1px solid #B1B1B1;
  line-height: 72rpx;
  display: flex;
}
.my .login .order .head .title {
  flex: 2;
  margin-right: 12rpx;
}
.my .login .order .head .order-icon {
  flex: 7;
  display: flex;
  align-items: center;
}
.my .login .order .head .order-icon .order-image {
  height: 44rpx;
  width: 44rpx;
}
.my .login .order .body {
  padding-top: 20rpx;
  flex: 7;
  background-color: #fff;
  display: flex;
}
.my .login .order .body .single-list {
  flex: 1;
  box-sizing: border-box;
  padding: 0 45rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
}
.my .login .aboutLogin {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  padding: 0 28rpx;
  margin-top: 50rpx;
}
.my .login .aboutLogin .out, .my .login .aboutLogin .change {
  flex: 1;
  background-color: #fff;
  display: flex;
  padding-left: 20rpx;
}
.my .login .aboutLogin .out .icon, .my .login .aboutLogin .change .icon {
  flex: 1;
  display: flex;
  align-items: center;
}
.my .login .aboutLogin .out .icon .icon-img, .my .login .aboutLogin .change .icon .icon-img {
  width: 50rpx;
  height: 50rpx;
}
.my .login .aboutLogin .out .title, .my .login .aboutLogin .change .title {
  flex: 7;
  line-height: 100rpx;
}
.my .login .aboutLogin .out {
  border-bottom: 1px solid #666;
}
.my .loginout {
  margin-top: 140rpx;
  padding: 0 28rpx;
}
.my .loginout .content {
  background-color: #fff;
}

