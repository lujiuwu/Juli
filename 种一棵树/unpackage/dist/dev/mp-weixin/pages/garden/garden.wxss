.garden {
  background-color: #F3FDED;
}
.garden .tree {
  position: relative;
  width: 100%;
  height: 600rpx;
}
.garden .tree .tree-background {
  width: 100%;
  height: 100%;
}
.garden .tree .water {
  border: 3px solid #2BBE14;
  position: absolute;
  right: 0;
  top: 120rpx;
  width: 160rpx;
  height: 82rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 100rpx 0 0 100rpx;
  border-right: 0;
  display: flex;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.garden .tree .water .icon {
  flex: 1;
  padding-top: 19rpx;
  margin-right: 20rpx;
}
.garden .tree .water .icon .img {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}
.garden .tree .water .text {
  flex: 6;
  line-height: 82rpx;
  font-size: 30rpx;
}
.garden .tree .popup-content {
  padding: 20rpx;
}
.garden .tree .integral {
  border-radius: 0 50px 50px 0;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  display: flex;
  background-color: #f9a826;
  border: 3px solid #ee7a15;
  width: 140rpx;
  height: 50rpx;
}
.garden .tree .integral .integral-number {
  position: relative;
  flex: 2;
  border-radius: 50px;
  height: 100rpx;
}
.garden .tree .integral .integral-number .image {
  position: absolute;
  top: -30rpx;
  left: 0;
  width: 110%;
  height: 100%;
}
.garden .tree .integral .integral-number .integral-text {
  position: absolute;
  color: #fff;
  font-size: 32rpx;
  top: 10rpx;
  left: 30rpx;
  z-index: 12;
}
.garden .tree .integral .integral-add {
  flex: 1;
  border-radius: 50px;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-weight: bolder;
  font-size: 42rpx;
}
.garden .tree .recent {
  border: 3px solid #2BBE14;
  position: absolute;
  right: 0;
  top: 230rpx;
  width: 160rpx;
  height: 82rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 100rpx 0 0 100rpx;
  border-right: 0;
  display: flex;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.garden .tree .recent .icon {
  flex: 1;
  padding-top: 19rpx;
  margin-right: 20rpx;
}
.garden .tree .recent .icon .img {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}
.garden .tree .recent .text {
  flex: 6;
  line-height: 82rpx;
  font-size: 30rpx;
}
.garden .days {
  display: flex;
  width: 420rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 3px solid #0FD15A;
  border-radius: 0 100rpx 100rpx 0;
  font-size: 34rpx;
  padding-left: 30rpx;
}
.garden .days .text {
  flex: 4;
}
.garden .days .text .days-numbrer {
  font-size: 50rpx;
  font-weight: bold;
  color: #2BBE14;
  margin: 0 6rpx;
}
.garden .days .days-icon {
  display: flex;
  align-items: center;
  line-height: 80rpx;
  flex: 1;
}
.garden .days .days-icon .day-img {
  width: 50rpx;
  height: 50rpx;
}
.garden .plant, .garden .buy {
  margin-top: 25rpx;
  padding: 0 20rpx;
}
.garden .plant .head, .garden .buy .head {
  font-size: 36rpx;
}
.garden .plant .body, .garden .buy .body {
  display: flex;
  gap: 6rpx;
  margin-top: 10rpx;
  height: 180rpx;
}
.garden .plant .body .single-sapling, .garden .plant .body .single-good, .garden .buy .body .single-sapling, .garden .buy .body .single-good {
  flex: 1;
}
.garden .plant .body .single-sapling .sapling-img, .garden .plant .body .single-sapling .good-img, .garden .plant .body .single-good .sapling-img, .garden .plant .body .single-good .good-img, .garden .buy .body .single-sapling .sapling-img, .garden .buy .body .single-sapling .good-img, .garden .buy .body .single-good .sapling-img, .garden .buy .body .single-good .good-img {
  width: 100%;
  height: 100%;
}
.garden .plant .foot, .garden .buy .foot {
  display: flex;
  text-align: right;
  color: #00973B;
  font-size: 36rpx;
  margin-top: 6rpx;
}
.garden .plant .foot .text, .garden .buy .foot .text {
  flex: 19;
  margin-right: 10rpx;
}
.garden .plant .foot .icon, .garden .buy .foot .icon {
  flex: 1;
}

