.message {
  background: #E8FADE;
}
.message .search {
  padding: 10rpx 26rpx;
}
.message .messages-area {
  background: linear-gradient(#E8FADE, #fff);
  height: 800rpx;
  border-radius: 44rpx 44rpx 0 0;
}
.message .messages-area .single-message {
  display: flex;
  height: 132rpx;
  background-color: #FBFDF8;
  margin-bottom: 4rpx;
  padding: 0 26rpx;
}
.message .messages-area .single-message .avatar {
  flex: 1;
  display: flex;
  align-items: center;
}
.message .messages-area .single-message .avatar .avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.message .messages-area .single-message .name {
  flex: 3;
  padding-top: 20rpx;
}
.message .messages-area .single-message .time {
  padding-top: 20rpx;
  flex: 1;
  color: #666;
  font-size: 26rpx;
}

