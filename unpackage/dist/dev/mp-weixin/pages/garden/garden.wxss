.garden {
  height: 100vh;
  width: 100vw;
  background-color: #f3fded;
}
.garden .tree {
  position: relative;
  width: 100%;
  height: 600rpx;
}
.garden .tree .tree-background {
  width: 100%;
  height: 100%;
}
.garden .tree .garden-tools {
  position: absolute;
  right: 0;
  top: 60rpx;
}
.garden .tree .garden-tools .single-tool {
  margin-bottom: 10rpx;
  border: 3px solid #2BBE14;
  width: 190rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.7);
  border-radius: 100rpx 0 0 100rpx;
  border-right: 0;
  display: flex;
  box-sizing: border-box;
  padding-left: 14rpx;
}
.garden .tree .garden-tools .single-tool .icon {
  flex: 1;
  padding-top: 19rpx;
}
.garden .tree .garden-tools .single-tool .icon .img {
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}
.garden .tree .garden-tools .single-tool .cnt {
  flex: 6;
  line-height: 80rpx;
  text-align: center;
}
.garden .tree .popup-content {
  padding: 20rpx;
}
.garden .tree .integral {
  border-radius: 0 50px 50px 0;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  display: flex;
  background-color: #f9a826;
  border: 3px solid #ee7a15;
  width: 140rpx;
  height: 50rpx;
}
.garden .tree .integral .integral-number {
  position: relative;
  flex: 2;
  border-radius: 50px;
  height: 100rpx;
}
.garden .tree .integral .integral-number .image {
  position: absolute;
  top: -30rpx;
  left: 0;
  width: 110%;
  height: 100%;
}
.garden .tree .integral .integral-number .integral-text {
  position: absolute;
  color: #fff;
  font-size: 32rpx;
  top: 10rpx;
  left: 30rpx;
  z-index: 12;
}
.garden .tree .integral .integral-add {
  flex: 1;
  border-radius: 50px;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-weight: bolder;
  font-size: 42rpx;
}
.garden .days {
  display: flex;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 3px solid #0FD15A;
  font-size: 34rpx;
  padding-left: 20rpx;
}
.garden .days .text {
  flex: 9;
}
.garden .days .text .days-numbrer {
  font-size: 50rpx;
  font-weight: bold;
  color: #2BBE14;
  margin: 0 6rpx;
}
.garden .days .days-icon {
  display: flex;
  align-items: center;
  line-height: 80rpx;
  flex: 1;
}
.garden .days .days-icon .day-img {
  width: 50rpx;
  height: 50rpx;
}
.garden .calendar-area .details {
  background-color: #fff;
  padding: 0 40rpx;
}
.garden .calendar-area .details .details-title {
  font-size: 32rpx;
}
.garden .calendar-area .details .details-body {
  height: 380rpx;
  background: linear-gradient(#fff, #cfeef1);
  margin-top: 20rpx;
  position: relative;
}
.garden .calendar-area .details .details-body .water-image {
  position: absolute;
  width: 190rpx;
  height: 210rpx;
  right: 40rpx;
  bottom: 140rpx;
}
.garden .calendar-area .details .details-body .water-image .image {
  width: 100%;
  height: 100%;
}
.garden .businessShow .focus {
  margin: 0 20rpx;
  background-image: url("https://s2.loli.net/2025/03/01/y1MepPCA7YvaUkJ.png");
  position: relative;
  height: 204px;
}
.garden .businessShow .focus .bar {
  position: absolute;
  bottom: 0;
  height: 50px;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  padding: 4px 20rpx;
  box-sizing: border-box;
}
.garden .businessShow .focus .bar .title {
  font-size: 30rpx;
}
.garden .businessShow .focus .bar .name {
  font-size: 25rpx;
}
.garden .businessShow .tabs {
  margin: 20rpx 0;
}
.garden .businessShow .detail {
  padding: 20rpx;
}
.garden .businessShow .detail .single-detail {
  border-radius: 5px;
  display: flex;
  height: 75px;
  margin-bottom: 20rpx;
  flex-direction: row;
}
.garden .businessShow .detail .single-detail .head {
  border-radius: 5px;
  flex: 1;
  line-height: 75px;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
}
.garden .businessShow .detail .single-detail .body {
  flex: 3;
  display: flex;
}
.garden .businessShow .detail .single-detail .body .ele {
  padding: 25rpx 0;
  box-sizing: border-box;
  width: 33%;
  text-align: center;
}
.garden .businessShow .detail .single-detail .body .ele .number {
  font-size: 34rpx;
  font-weight: bold;
}
.garden .businessShow .detail .single-detail .body .ele .title {
  color: #1f1e1e;
  margin-top: 4px;
  font-size: 26rpx;
}

