.payment-step1 {
  background-color: #f3fded;
  height: 100vh;
  position: relative;
}
.payment-step1 .image_area {
  width: 100%;
  height: 360px;
}
.payment-step1 .image_area .img {
  height: 100%;
  width: 100%;
}
.payment-step1 .info_area {
  padding: 0 20rpx;
}
.payment-step1 .info_area .title {
  margin: 5px 0;
  font-size: 38rpx;
  font-weight: bold;
}
.payment-step1 .info_area .des {
  display: flex;
}
.payment-step1 .info_area .des .price {
  font-weight: bold;
  flex: 1;
  text-align: left;
  color: #F43838;
  font-size: 36rpx;
}
.payment-step1 .info_area .des .price .s {
  font-size: 34rpx;
}
.payment-step1 .info_area .des .sale {
  font-size: 32rpx;
  flex: 1;
  text-align: right;
  color: #505050;
}
.payment-step1 .package {
  background-color: #fff;
  margin: 24rpx 0;
}
.payment-step1 .package .line1 {
  display: flex;
  height: 70px;
  padding: 20rpx;
  box-sizing: border-box;
}
.payment-step1 .package .line1 .icon {
  flex: 1;
}
.payment-step1 .package .line1 .text {
  flex: 15;
  margin-left: 5px;
}
.payment-step1 .package .line2 {
  display: flex;
  height: 35px;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.payment-step1 .package .line2 .icon {
  flex: 1;
}
.payment-step1 .package .line2 .text {
  flex: 15;
  margin-left: 5px;
}
.payment-step1 .comments {
  background-color: #fff;
  padding: 20rpx;
}
.payment-step1 .comments .head {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.payment-step1 .comments .body {
  display: flex;
}
.payment-step1 .comments .body .avatar {
  padding-top: 10rpx;
  flex: 1;
  margin-right: 10rpx;
}
.payment-step1 .comments .body .avatar .img {
  height: 24px;
  width: 24px;
  border-radius: 50px;
}
.payment-step1 .comments .body .comment {
  flex: 12;
  margin-top: 10rpx;
}
.payment-step1 .comments .body .image {
  flex: 3;
}
.payment-step1 .comments .body .image .img {
  width: 75px;
  height: 75px;
}
.payment-step1 .store {
  padding: 20rpx;
  display: flex;
  background-color: #fff;
  height: 65px;
}
.payment-step1 .store .image {
  flex: 1;
  margin-right: 20rpx;
}
.payment-step1 .store .image .img {
  width: 63px;
  height: 63px;
}
.payment-step1 .store .detail {
  flex: 4;
  padding-top: 20rpx;
}
.payment-step1 .store .btn {
  flex: 1;
  padding-top: 23rpx;
}
.payment-step1 .payment-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 60px;
}
.payment-step1 .payment-btn .btns {
  display: flex;
  padding-right: 20rpx;
  width: 218px;
}
.payment-step1 .payment-btn .btns .btn {
  flex: 1;
  height: 34px;
  color: #fff;
  text-align: center;
  line-height: 34px;
}
.payment-step1 .popup .pay-area {
  height: 400px;
  padding: 80rpx 16rpx 40rpx 0;
  box-sizing: border-box;
}
.payment-step1 .popup .pay-area .address {
  display: flex;
}
.payment-step1 .popup .pay-area .address .icon {
  flex: 1;
}
.payment-step1 .popup .pay-area .address .text {
  flex: 15;
}
.payment-step1 .popup .pay-area .detail {
  display: flex;
  padding: 40rpx 20rpx;
}
.payment-step1 .popup .pay-area .detail .image {
  flex: 1;
}
.payment-step1 .popup .pay-area .detail .image .img {
  width: 153px;
  height: 143px;
}
.payment-step1 .popup .pay-area .detail .price {
  flex: 2;
  padding-top: 28rpx;
}
.payment-step1 .popup .pay-area .detail .price .number {
  font-size: 32rpx;
  margin-left: 20rpx;
  color: #F43838;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.payment-step1 .popup .pay-area .pay-btn {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.payment-step1 .popup .pay-area .pay-btn .btn {
  background-color: #FA6401;
  color: #fff;
  font-size: 36rpx;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

