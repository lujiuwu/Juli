.showAll {
  background: linear-gradient(#f3bd1a, #f5f5da, #fff);
  height: 100vh;
  padding: 30rpx 20rpx 0;
}
.showAll .ranking-box {
  width: 100%;
  height: 100%;
}
.showAll .ranking-box .head {
  flex-direction: column;
}
.showAll .ranking-box .head .icon {
  text-align: center;
}
.showAll .ranking-box .head .icon .img {
  height: 150rpx;
  width: 150rpx;
}
.showAll .ranking-box .head .ranking {
  margin-top: 10rpx;
  padding: 0 70rpx;
  font-size: 42rpx;
}
.showAll .ranking-box .body {
  padding: 10rpx 16rpx;
  margin-top: 20rpx;
  height: 1000rpx;
  background: linear-gradient(#f5f5da, #fff);
  border-top: 2px solid #fbd7ac;
  border-radius: 20rpx;
  position: relative;
}
.showAll .ranking-box .body .myInfo {
  height: 94rpx;
  display: flex;
  border-radius: 10px 10px 0 0;
  line-height: 94rpx;
  border-top: 2px solid #F3FDED;
  border-left: 2px solid #F3FDED;
  border-right: 2px solid #F3FDED;
  border-bottom: 4px solid #fbd7ac;
}
.showAll .ranking-box .body .myInfo .my-rank {
  flex: 1;
  text-align: center;
  color: #FB5608;
  font-size: 60rpx;
  font-weight: bold;
}
.showAll .ranking-box .body .myInfo .my-avatar {
  flex: 1;
  padding: 10rpx;
  margin-right: 10rpx;
}
.showAll .ranking-box .body .myInfo .my-avatar .avatar-image {
  width: 100%;
  height: 100%;
}
.showAll .ranking-box .body .myInfo .my-username {
  flex: 5;
  font-size: 32rpx;
  font-weight: bold;
  color: #0C602D;
}
.showAll .ranking-box .body .myInfo .rank-number {
  flex: 1;
  font-size: 34rpx;
  color: #00973B;
}
.showAll .ranking-box .body .all-rank {
  margin-top: 10rpx;
  height: 94rpx;
  display: flex;
  line-height: 94rpx;
}
.showAll .ranking-box .body .all-rank .single-rank {
  flex: 1;
  text-align: center;
  color: #0C602D;
  font-size: 60rpx;
  font-weight: bold;
}
.showAll .ranking-box .body .all-rank .single-avatar {
  flex: 1;
  padding: 10rpx;
  margin-right: 10rpx;
}
.showAll .ranking-box .body .all-rank .single-avatar .avatar-image {
  width: 100%;
  height: 100%;
}
.showAll .ranking-box .body .all-rank .single-username {
  flex: 5;
  font-size: 32rpx;
  font-weight: bold;
  color: #0C602D;
}
.showAll .ranking-box .body .all-rank .single-rank-number {
  flex: 1;
  font-size: 32rpx;
  color: #00973B;
}
.showAll .ranking-box .body .noMore {
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 10rpx;
}

